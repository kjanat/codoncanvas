{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",

    // JSX for React
    "jsx": "react-jsx",

    // Strict type checking
    "strict": true,
    // noUncheckedIndexedAccess: Disabled - requires extensive codebase changes
    // Consider enabling incrementally for new code
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": false,

    // Module interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // Output
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Path aliases for cleaner imports
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "@/core": ["./src/core"],
      "@/core/*": ["./src/core/*"],
      "@/genetics": ["./src/genetics"],
      "@/genetics/*": ["./src/genetics/*"],
      "@/analysis": ["./src/analysis"],
      "@/analysis/*": ["./src/analysis/*"],
      "@/education": ["./src/education"],
      "@/education/*": ["./src/education/*"],
      "@/exporters": ["./src/exporters"],
      "@/exporters/*": ["./src/exporters/*"],
      "@/ui": ["./src/ui"],
      "@/ui/*": ["./src/ui/*"],
      "@/demos": ["./src/demos"],
      "@/demos/*": ["./src/demos/*"],
      "@/data": ["./src/data"],
      "@/data/*": ["./src/data/*"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@/utils": ["./src/utils"],
      "@/utils/*": ["./src/utils/*"],
      "@/playground": ["./src/playground"],
      "@/playground/*": ["./src/playground/*"],
      "@/pages": ["./src/pages"],
      "@/pages/*": ["./src/pages/*"],
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/hooks": ["./src/hooks"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/tests/*": ["./tests/*"],
      "@/tools/*": ["./tools/*"],
      "@/scripts/*": ["./scripts/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
