{
  "name": "codoncanvas",
  "version": "1.0.0",
  "description": "DNA-inspired visual programming language",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "benchmark": "tsx scripts/benchmark.ts",
    "export-examples": "tsx scripts/export-examples.ts",
    "zip-examples": "./scripts/zip-examples.sh",
    "prepare-distribution": "npm run export-examples && npm run zip-examples",
    "generate-screenshots": "tsx scripts/generate-screenshots.ts"
  },
  "dependencies": {
    "gif.js": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "canvas": "^3.2.0",
    "eslint": "^8.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
