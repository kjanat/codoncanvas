{
  "name": "codoncanvas",
  "version": "1.0.0",
  "description": "DNA-inspired visual programming language",
  "type": "module",
  "bin": {
    "codoncanvas": "./cli.ts"
  },
  "scripts": {
    "benchmark": "bun --bun scripts/benchmark.ts",
    "build": "tsgo && vite build",
    "cli": "bun --bun cli.ts",
    "dev": "bun --bun run vite",
    "export-examples": "bun --bun scripts/export-examples.ts",
    "fmt": "dprint fmt --config .dprint.jsonc --config-discovery=false --allow-no-files",
    "format": "bun fmt",
    "generate-screenshots": "bun scripts/generate-screenshots.ts",
    "postinstall": "lefthook install",
    "jscpd": "bunx jscpd",
    "lint": "biome lint",
    "lint:css": "stylelint '**/*.css'",
    "lint:fix": "biome check --write",
    "metrics:analyze": "bun --bun scripts/metrics-analyzer.ts",
    "metrics:generate-sample": "bun --bun scripts/generate-metrics-sample.ts",
    "prepare-distribution": "bun run export-examples && bun run zip-examples",
    "preview": "vite preview",
    "research:analyze": "bun --bun scripts/research-data-analyzer.ts",
    "research:generate-data": "bun --bun scripts/generate-sample-data.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsgo --noEmit",
    "zip-examples": "./scripts/zip-examples.sh"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "ignoreFiles": [
      "dist/**",
      "report/**",
      "node_modules/**"
    ]
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "gif.js": "^0.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@happy-dom/global-registrator": "^20.0.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.3.3",
    "@types/gif.js": "^0.2.5",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@typescript/native-preview": "^7.0.0-dev.20251126.1",
    "canvas": "^3.2.0",
    "dprint": "^0.50.2",
    "eslint": "^9.39.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "lefthook": "^2.0.4",
    "stylelint": "^16.26.0",
    "stylelint-config-standard": "^39.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "vite": "^7.2.4"
  },
  "packageManager": "bun@1.3.3",
  "jscpd": {
    "threshold": 1.5,
    "reporters": [
      "html",
      "console",
      "markdown"
    ],
    "ignore": [
      "**/.serena/**"
    ],
    "absolute": false,
    "gitignore": true
  }
}
