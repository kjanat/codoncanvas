{
  /** Bun settings */
  // If support for Bun should be added to the default "JavaScript Debug Terminal".
  "bun.debugTerminal.enabled": true,

  // If the debugger should stop on the first line of the program.
  "bun.debugTerminal.stopOnEntry": false,

  // Glob pattern to find test files. Defaults to the value shown below.
  "bun.test.filePattern": "tests/**/*{.test.,.spec.,_test_,_spec_}{ts,tsx}",

  // The custom script to call for testing instead of `bun test`
  "bun.test.customScript": "bun test",

  /** Biome settings */
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "biome.lsp.bin": {
    "darwin-arm64": "./node_modules/@biomejs/cli-darwin-arm64/biome",
    "darwin-x64": "./node_modules/@biomejs/cli-darwin-x64/biome",
    "linux-arm64": "./node_modules/@biomejs/cli-linux-arm64/biome",
    "linux-arm64-musl": "./node_modules/@biomejs/cli-linux-arm64-musl/biome",
    "linux-x64": "./node_modules/@biomejs/cli-linux-x64/biome",
    "linux-x64-musl": "./node_modules/@biomejs/cli-linux-x64-musl/biome",
    "win32-arm64": "./node_modules/@biomejs/cli-win32-arm64/biome",
    "win32-x64": "./node_modules/@biomejs/cli-win32-x64/biome"
  }
}
