{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    "biome": {
      "command": ["biome", "lsp-proxy"],
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".jsonc"],
      "env": {}
    }
  },
  "formatter": {
    "dprint": {
      "command": [
        "bun",
        "dprint",
        "fmt",
        "--config",
        ".dprint.jsonc",
        "--config-discovery=false",
        "--allow-no-files",
        "$FILE"
      ],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".json",
        ".jsonc",
        ".cjs",
        ".mjs",
        ".md",
        ".dockerfile",
        ".dockerignore",
        ".yaml",
        ".yml",
        ".html",
        ".xml",
        ".toml",
        ".svg",
        ".scss",
        ".sass",
        ".css"
      ],
      "environment": {}
    }
  },
  "mcp": {
    "bun_docs": {
      "type": "remote",
      "url": "https://bun.com/docs/mcp",
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant"
      ],
      "enabled": true
    },
    "perplexity": {
      "type": "local",
      "command": ["bunx", "server-perplexity-ask@latest"],
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}"
      },
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "morphllm": {
      "type": "local",
      "command": ["bunx", "@morphllm/morphmcp"],
      "environment": {
        "MORPH_API_KEY": "{env:MORPH_API_KEY}",
        "ENABLED_TOOLS": "read_file,read_multiple_files,list_directory,list_directory_with_sizes,directory_tree,create_directory,search_files,move_file,get_file_info,list_allowed_directories"
      },
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  },
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5"
}
