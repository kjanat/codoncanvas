{
  "$schema": "https://opencode.ai/config.json",
  "lsp": {
    // https://opencode.ai/docs/lsp/
    "biome": {
      "command": ["biome", "lsp-proxy"],
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".jsonc"],
      "env": {}
    },
    "shellcheck": {
      "command": ["shellcheck", "-f", "gcc", "-x", "-s", "bash", "-o", "all"],
      "extensions": ["sh"],
      "disabled": true
    }
  },
  "formatter": {
    "dprint": {
      "command": [
        "bunx",
        "dprint",
        "fmt",
        "--config",
        ".dprint.jsonc",
        "--allow-no-files",
        "$FILE"
      ],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".json",
        ".jsonc",
        ".cjs",
        ".mjs",
        ".md",
        ".dockerfile",
        ".dockerignore",
        ".yaml",
        ".yml",
        ".html",
        ".xml",
        ".toml",
        ".svg",
        ".css",
        ".sass",
        ".scss"
      ],
      "environment": { "DPRINT_CONFIG_DISCOVERY": "false" }
    },
    "markdownlint-cli2": {
      "command": [
        "bunx",
        "markdownlint-cli2",
        /*"--config", ".markdownlint.jsonc",*/ "$FILE",
        "--fix"
      ],
      "extensions": ["md", "markdown"]
    },
    "shfmt": {
      "command": [
        "shfmt",
        "--indent",
        "2",
        "--language-dialect",
        "bash",
        "--simplify",
        "--binary-next-line",
        "--case-indent",
        "--keep-padding",
        "--write",
        "$FILE"
      ],
      "extensions": ["sh"]
    }
  },
  "mcp": {
    "bun_docs": {
      "type": "remote",
      "url": "https://bun.com/docs/mcp",
      "enabled": true
    },
    "serena": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant"
      ],
      "enabled": true
    },
    "perplexity": {
      "type": "local",
      "command": ["bunx", "server-perplexity-ask@latest"],
      "environment": { "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}" },
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": { "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}" },
      "enabled": true
    },
    "morphllm": {
      "type": "local",
      "command": ["bunx", "@morphllm/morphmcp"],
      "environment": {
        "MORPH_API_KEY": "{env:MORPH_API_KEY}",
        "ENABLED_TOOLS": "read_file,read_multiple_files,list_directory,list_directory_with_sizes,directory_tree,create_directory,search_files,move_file,get_file_info,list_allowed_directories"
      },
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  },
  "model": "anthropic/claude-opus-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "share": "auto",
  "autoupdate": true,
  // "instructions": [],
  "experimental": {
    "chatMaxRetries": 1,
    "batch_tool": true
  },
  "username": "kjanat"
}
